# =============================================================================
# ChainEquity Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment
# =============================================================================

# -----------------------------------------------------------------------------
# Solana Configuration
# -----------------------------------------------------------------------------
# Cluster: devnet, testnet, or mainnet-beta
SOLANA_CLUSTER=devnet

# RPC endpoints (use dedicated RPC for production)
# Free: https://api.devnet.solana.com
# Paid: Helius, QuickNode, Triton, etc.
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_WS_URL=wss://api.devnet.solana.com

# -----------------------------------------------------------------------------
# Program IDs (update after deployment)
# -----------------------------------------------------------------------------
# Run: solana address -k target/deploy/<program>-keypair.json
FACTORY_PROGRAM_ID=Fg6PaFpoGXkYsidMpWTK6W2BeZ7FEfcYkg476zPFsLnS
TOKEN_PROGRAM_ID=HmbTLCmaGvZhKnn1Zfa1JVnp7vkMV4DYVxPLWBVoN65L
GOVERNANCE_PROGRAM_ID=BPFLoaderUpgradeab1e11111111111111111111111
TEST_USDC_PROGRAM_ID=TokenkegQfeZyiNwAJbNbGKPFXCWuBvf9Ss623VQ5DA

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL connection string (asyncpg driver)
DATABASE_URL=postgresql+asyncpg://chainequity:chainequity@localhost:5432/chainequity

# Connection pool settings (optional)
# DB_POOL_SIZE=20
# DB_MAX_OVERFLOW=10

# -----------------------------------------------------------------------------
# Backend API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000

# Debug mode (disable in production)
DEBUG=false
LOG_LEVEL=INFO

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# -----------------------------------------------------------------------------
# Indexer Configuration
# -----------------------------------------------------------------------------
# Polling interval in seconds
INDEXER_POLL_INTERVAL=5

# Batch size for processing transactions
INDEXER_BATCH_SIZE=100

# Enable/disable indexer
INDEXER_ENABLED=true

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_SOLANA_NETWORK=devnet
